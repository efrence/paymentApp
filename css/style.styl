@import '../bower_components/jeet/stylus/jeet'

//edit(blue)

mw = 900px
bp = 900px
pad = 3rem


.head
  center(mw)
  padding: 2rem 0
  text-align: center
  @media (max-width: bp)
    center(mw, pad)
    stack()
  .logo
    col(1/5)
    @media (max-width: bp)
      stack()
      margin-bottom: pad
  nav
    @media (max-width: bp)
      stack()
    col(3/5, offset: 1/5)
    a
      col(1/3)
      overflow: hidden
      @media (max-width: bp)
        stack()
        margin-bottom: 5px

.jumbotron
  center(mw, pad)
  @media(max-width: bp)
    margin: pad

.page-header
  center(mw)
  margin-top: 0
  h1
    margin-top: 0
  @media (max-width: bp)
    center(mw, pad)

.alerts
  center(mw)
  margin-bottom: 3rem
  @media (max-width: bp)
    center(mw, pad)
  .alert
    col(1/2, cycle: 2)

#payee-form, #payment-form
  center(mw)
  .chosen-container
    width: 100% !important
  button
    @media(max-width: bp)
      stack()
  @media (max-width: bp)
    center(mw,pad)
    stack()

.date-input
  text-align: center
  p
    text-align: left
  @media (max-width: bp)
    stack()
  .day,.month,.year,button
    span(1/4)
    @media (max-width: bp)
      stack()
      margin-bottom: 10px

.datetimepicker
  width: 50%
  margin-left: 25%
  @media (max-width: bp)
    stack()
  table
    margin-top: 30px

#balance-container
  text-align: center


